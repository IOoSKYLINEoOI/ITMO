        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITMO.WinCSCourse2023.WPF.Lab2._1"
        mc:Ignorable="d"
        Title="MainWindow" Height="189" Width="255">
    <Grid Height="NaN" Margin="0,0,0,-6" Width="NaN" TextBoxBase.TextChanged="Grid_TextChanged">
