@model FinalProject.Models.Grade

@{
    ViewData["Title"] = "CreateGrade";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Существующие заявки</h3>
<table> 
    <tr>
        <td><p>Имя</p></td>
        <td><p>Тип кредита </p></td>
    </tr>
    @foreach (var c in ViewBag.Grades) 
    {
        <tr>
            <td><p>@c.Score</p></td>
            <td><p>@c.StudentGrade</p></td>
            <td><p>@c.DateOfGrade</p></td>
        </tr>
    } 
</table>

<h3>Форма подачи заявки по программам кредитования</h3>
<form method="post" action="">
    <table> 
        <tr>
            <td><p>Введите оценку</p></td>
            <td><input type="text" name="Score" /> </td>
        </tr> 
        <tr>
            <td><p>Выберите студента из списка</p></td> 
            <td>
                <select name="StudentGrade">
                @foreach (var cr in ViewBag.Students)
                    {
                        <option>@cr.StudentId</option>
                    }
                </select>
            </td>
        </tr>
        <tr><td><input type="submit" value="Отправить" /> </td><td></td></tr>
    </table>
</form>

